generator client {
  provider      = "prisma-client-js"
  output        = "../node_modules/@prisma/client-sqlite"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("COMMENT_DATABASE_URL")
}

model ColumnComment {
  id        Int      @id @default(autoincrement())
  tableName String
  columnName String
  comment   String
  updatedAt DateTime @updatedAt

  @@unique([tableName, columnName])
}
